extends layout

block link
    -var selected = 'letter';
block content
    h1= title
    p Welcome to #{title}
        form(method='POST' action='/send-request')
            div.input
                span.label XML Content
                textarea(name="description", cols="40", rows="5")
            div.actions
                input(type="submit", value="Send")
    p #{error}
    p(style='white-space:pre;')
        #{bodyResponse}

    p #{headers}
    p #{respBody}
